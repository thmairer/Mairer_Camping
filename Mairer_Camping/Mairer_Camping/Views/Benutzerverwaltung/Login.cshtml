@model Mairer_Camping.Models.UserLogin

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm("registration", "user", FormMethod.Post))
{
    <table>

        <tbody>
            <tr>
                <td>@Html.LabelFor(u => u.Username, "Username: ")</td>
                <td>@Html.TextBoxFor(u => u.Username, new { required = "required" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(u => u.Password, "Password: ")</td>
                <td>@Html.PasswordFor(u => u.Password, new { required = "required" })</td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" value="submit" id="btnSubmit" />
                    <input type="reset" value="abort" id="btnReset" />
                </td>
            </tr>
        </tbody>



    </table>
}